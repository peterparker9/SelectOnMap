<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="18dp"
    >

    <View
        android:layout_marginTop="22dp"
        android:id="@+id/viewRecent"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="16dp"
        android:background="@mipmap/combined" />

    <TextView
        android:id="@+id/txtRecent"
        android:layout_toRightOf="@+id/viewRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="#202020"
        android:lineSpacingExtra="-2sp"
        android:text="Vonde Marga Church"
        />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_toRightOf="@+id/viewRecent"
        android:layout_below="@+id/txtRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:textSize="10sp"
        android:textColor="#828282"
        android:lineSpacingExtra="-2sp"
        android:text="7th Main Road, Teacher’s Colony, HSR Layout 5th Sector, B…"
        />

    <View
        android:layout_toRightOf="@+id/viewRecent"
        android:layout_below="@id/txtAddress"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#e2e2e2"
        android:layout_height="2dp" />


</RelativeLayout>